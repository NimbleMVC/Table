                                            <a href="?page=<?= $page - 1 ?>" class="page-link ajax-link" style="border-radius: 4px; color: #555; font-weight: 500;">&laquo;</a>
                                        </li>
                                    <?php endif ?>
                                    <?php for ($i = $paginationStart; $i <= $paginationEnd; $i++): ?>
