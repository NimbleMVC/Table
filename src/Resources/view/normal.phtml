<?php

use NimblePHP\Framework\Translation\Translation;
use NimblePHP\Table\Column;
use NimblePHP\Table\Filter;
use NimblePHP\Table\Table;

/** @var bool $isAjax */
/** @var array $sortColumn */
/** @var bool $isSortable */
/** @var array $actions */
/** @var array $columns */
/** @var array $filters */
/** @var array $data */
/** @var string $tableId */
/** @var string $currentUrl */
/** @var string $tableClasses */
/** @var string $searchValue */
/** @var int $pageCount */
/** @var int $page */
/** @var int $paginationStart */
/** @var int $paginationEnd */
/** @var Column $column */
/** @var Table $tableInstance */
/** @var Filter $filter */
?>

    <div id="<?= $tableId ?>" class="table-module m-2" data-url="<?= $currentUrl ?>">
        <div class="table-header d-flex flex-wrap justify-content-between mb-2">
            <?php if ($isAjax): ?>
                <?php if (!empty($actions)): ?>
                    <div class="action-div pt-1 col-12 col-md-auto mb-2 mb-md-0">
                        <?php foreach ($actions as $action): ?>
                            <a href="<?= $action['url'] ?>" class="btn btn-sm btn-primary me-2<?= !empty($action['class']) ? ' ' . $action['class'] : '' ?>">
                                <?= $action['name'] ?>
                            </a>
                        <?php endforeach ?>
                    </div>
                <?php endif ?>

                <div class="col-12 col-md-auto d-flex justify-content-end">
                    <input class="ajax-form form-control me-2 form-control-sm w-100"
                           type="search" name="search" value="<?= $searchValue ?>"
                           placeholder="<?= Translation::getInstance()->translate('module.table.search') ?>" aria-label="<?= Translation::getInstance()->translate('module.table.search') ?>"/>
                </div>
            <?php endif ?>
        </div>
        <div class="table-responsive-md overflow-auto">
            <table class="table table-striped m-0<?= !empty($tableClasses) ? ' ' . $tableClasses : '' ?>">
                <thead>
                <tr>
                    <?php foreach ($columns as $column): ?>
                        <th scope="col" style="<?= trim($column->getStyleAsString()) ?> <?php if ($column->isSortable() && $isSortable): ?> cursor: pointer;<?php endif ?>" data-sortable="<?= $column->isSortable() ? 'true' : 'false' ?>" data-key="<?= $column->getKey() ?>" class="<?php if ($column->isSortable() && $isSortable): ?>user-select-none<?php endif ?>">
                            <div class="d-flex justify-content-between align-self-center">
                                <span>
                                    <?= $column->getName() ?>
                                </span>
                                <?php if ($column->isSortable() && $isSortable): ?>
                                    <?php
                                        $direction = 'none';

                                        if (!empty($sortColumn) && $sortColumn['key'] == $column->getKey()) {
                                            $direction = $sortColumn['direction'] === 'asc' ? 'asc' : 'desc';
                                        }
                                    ?>

                                    <span class="sort-icon mt-1" data-sort="<?= $direction ?>" aria-hidden="true" style="opacity: 0.4;">
                                        <?php if ($direction === 'asc'): ?>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                                <path d="M8 3l4.5 5H3.5L8 3z"/>
                                            </svg>
                                        <?php elseif ($direction === 'desc'): ?>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                                <path d="M8 13l-4.5-5h9L8 13z"/>
                                            </svg>
                                        <?php else: ?>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                                <path d="M8 2l4 4H4l4-4z"/>
                                                <path d="M8 14l-4-4h8l-4 4z"/>
                                            </svg>
                                        <?php endif; ?>
                                    </span>
                                <?php endif; ?>
                            </div>
                        </th>
                    <?php endforeach ?>
                </tr>
                </thead>
                <tbody>
                <?php if (empty($data)): ?>
                    <tr>
                        <td colspan="<?= count($columns) ?>" class="text-center fst-italic text-muted py-5">
                            <?= Translation::getInstance()->translate('module.table.empty_data') ?>
                        </td>
                    </tr>
                <?php else: ?>
                    <?php foreach ($data as $row): ?>
                        <tr>
                            <?php foreach ($columns as $column): ?>
                                <?php
                                    $columnValue = $tableInstance->prepareColumnValue($column, $row);
                                    $isEditableColumn = $tableInstance->isColumnEditable($column);
                                    $editError = $tableInstance->getInlineEditErrorByRow($column, $row);
                                ?>
                                <td style="<?= $column->getStyleAsString() ?>">
                                    <?php if ($isEditableColumn): ?>
                                        <div class="table-cell-editable d-flex align-items-start justify-content-between gap-2<?= !empty($editError) ? ' table-cell-editable-open' : '' ?>" data-edit-column="<?= htmlspecialchars($column->getKey(), ENT_QUOTES) ?>" data-edit-id="<?= htmlspecialchars((string)($tableInstance->getRowIdentifier($row) ?? ''), ENT_QUOTES) ?>">
                                            <div class="table-cell-value flex-grow-1">
                                                <?= $columnValue ?>
                                            </div>
                                            <div class="table-cell-editor d-none flex-grow-1">
                                                <?= $tableInstance->prepareColumnEditValue($column, $row) ?>
                                                <?php if (!empty($editError)): ?>
                                                    <div class="table-cell-edit-error text-danger small mt-1"><?= htmlspecialchars($editError, ENT_QUOTES) ?></div>
                                                <?php endif ?>
                                            </div>
                                            <button type="button" class="table-cell-edit-trigger btn btn-link btn-sm text-muted p-0" title="Edytuj" aria-label="Edytuj">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                                                    <path d="M12.854.146a.5.5 0 0 1 .707 0l2.293 2.293a.5.5 0 0 1 0 .707l-9.5 9.5L4 13l.354-2.354 9.5-9.5zM3.5 13.5l2.147-.358L4.358 11.853 4 14l2.147-.358L3.5 13.5z"/>
                                                </svg>
                                            </button>
                                        </div>
                                    <?php else: ?>
                                        <?= $columnValue ?>
                                    <?php endif ?>
                                </td>
                            <?php endforeach ?>
                        </tr>
                    <?php endforeach ?>
                <?php endif; ?>
                </tbody>
            </table>
        </div>
        <div class="table-footer p-1 mt-2">
            <div class="d-flex justify-content-between">
                <div>
                    <?php if ($isAjax): ?>
                        <?php foreach ($filters as $filter): ?>
                            <?= $filter->render($tableInstance) ?>
                        <?php endforeach ?>
                    <?php endif ?>
                </div>
                <div>
                    <?php if($isAjax && $pageCount > 1): ?>
                        <div>
                            <nav class="table-footer-pagination">
                                <ul class="pagination justify-content-end m-0 pagination-sm">
                                    <?php if ($page > 1): ?>
                                        <?php if ($page > 3): ?>
                                            <li class="page-item">
                                                <a href="?page=1" class="page-link ajax-link">&laquo;&laquo;</a>
                                            </li>
                                        <?php endif ?>
                                        <li class="page-item">
                                            <a href="?page=<?= $page - 1 ?>" class="page-link ajax-link">&laquo;</a>
                                        </li>
                                    <?php endif ?>
                                    <?php for ($i = $paginationStart; $i <= $paginationEnd; $i++): ?>
                                        <li class="page-item<?= $page == $i ? ' active' : '' ?>">
                                            <a href="?page=<?= $i ?>" class="page-link ajax-link"><?= $i ?></a>
                                        </li>
                                    <?php endfor ?>
                                    <?php if ($page < $pageCount): ?>
                                        <li class="page-item">
                                            <a href="?page=<?= $page + 1 ?>" class="page-link ajax-link">&raquo;</a>
                                        </li>
                                        <?php if ($page < $pageCount - 3): ?>
                                            <li class="page-item">
                                                <a href="?page=<?= $pageCount ?>" class="page-link ajax-link">&raquo;&raquo;</a>
                                            </li>
                                        <?php endif ?>
                                    <?php endif ?>
                                </ul>
                            </nav>
                        </div>
                    <?php endif ?>
                </div>
            </div>
        </div>
    </div>

<?php if ($tableId): ?>
    <script>$("#<?= $tableId ?>").ajaxTable()</script>
<?php endif ?>